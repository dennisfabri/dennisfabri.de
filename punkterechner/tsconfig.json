{
    "compilerOptions": {
      "lib": [
        "es2015",
        "dom"
       ],
      "module": "es2015",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "target": "ES2015",
      "outDir": "build/js"
    },
    "include": ["src/ts/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}